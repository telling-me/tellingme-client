{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": "./src",
    "paths": {
      "components/*": ["components/*"],
      "configs/*": ["configs/*"],
      "font/*": ["font/*"],
      "hooks/*": ["hooks/*"],
      "pages/*": ["pages/*"],
      "stores/*": ["stores/*"],
      "utils/*": ["utils/*"],
      "styles/*": ["styles/*"],
      "assets/*": ["assets/*"],
      "data/*": ["data/*"]
    },

    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/components/common/LandingBubble.tsx"],
  "files": ["./custom.d.ts"]
}
